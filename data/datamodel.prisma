
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  location String
  events   Event[]  @relation("attendees")
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  date        DateTime
  time        String
  location    String
  description String
  ticketPrice Float
  capacity    Int
  attendees   User[]   @relation("attendees")
  artists     Artist[] @relation("performances")
}

model Artist {
  id          Int      @id @default(autoincrement())
  name        String
  genre       String
  description String
  events      Event[]  @relation("performances")
}
