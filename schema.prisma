
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  location  String
  events    Event[]  @relation("Attendee")
}

model Event {
  id          Int       @id @default(autoincrement())
  name        String
  date        DateTime
  time        String
  location    String
  description String
  ticketPrice Float
  capacity    Int
  artists     Artist[] @relation("Performer")
  attendees   User[]   @relation("Attendee")
}

model Artist {
  id          Int      @id @default(autoincrement())
  name        String
  genre       String
  description String
  events      Event[]  @relation("Performer")
}
