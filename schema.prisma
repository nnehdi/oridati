
// database
datasource db {
  provider = "sqlite"
  url      = "file:database.db"
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
  interface            = "sync"
}
model User {
  id          Int      @id @default(autoincrement())
  username    String
  email       String   @unique
  password    String
  location    String?
  profilePic  String?
  bio         String?
  socialLinks String?
  paymentInfo String?
  role        String
  beats       Beat[]
}

model Beat {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  genre       String?
  price       Float
  duration    Int?
  file        String
  dateCreated DateTime @default(now())
  seller      User     @relation(fields: [sellerId], references: [id])
  sellerId    Int
}
